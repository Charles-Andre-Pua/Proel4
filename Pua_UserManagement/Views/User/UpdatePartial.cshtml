@model Person
<div class="container">
    <div class="row g-5">
        <div class="offset-2 col-md-8 col-lg-8">
            <h4 class="mb-3">User Registration</h4>
            <form method="post" asp-controller="User" asp-action="UpdateProcess" class="needs-validation">
                <input asp-for="Id" hidden />
                <input asp-for="DateCreated" hidden />
                <input asp-for="User.Id" hidden />
                <div class="row g-3">
                    <div class="col-sm-6">
                        <label asp-for="Firstname" class="form-label">First Name</label>
                        <input type="text" class="form-control" asp-for="Firstname" placeholder="First Name" required />
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="Lastname" class="form-label">Last Name</label>
                        <input type="text" class="form-control" asp-for="Lastname" placeholder="Last Name" required />
                    </div>
                    <div class="col-12">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input type="email" class="form-control" asp-for="Email" placeholder="Email" required />
                    </div>
                    <div class="col-6">
                        <label asp-for="User.Username" class="form-label">Username</label>
                        <div class="input-group">
                            <span class="input-group-text">@@</span>
                            <input class="form-control" asp-for="User.Username" type="text" required />
                        </div>
                    </div>
                    <div class="col-6">
                        <label asp-for="User.Password" class="form-label">Password</label>
                        <div class="input-group-text has-validation">
                            <input type="password" class="form-control" asp-for="User.Password" placeholder="Password" required />
                        </div>
                    </div>
                    <button class="btn btn-success col-12 my-5" type="submit">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

